---
import { Image } from 'astro:assets';
import Layout from "../layouts/Layout.astro";
import AppHero from "../components/approach/AppHero.astro";
import AppChart from "../components/approach/AppChart.astro";
import AppCols from "../components/approach/AppCols.astro";
import ChapNextBtn from "../components/ChapNextBtn.astro";

import stripeWide from '../assets/stripe-wide.svg'
---
<Layout title="Phương phát tiếp cận" hide_stripe={false}>
	<AppHero />
	<Image src={stripeWide} alt="" class='decor'/>
	<AppChart />
	<AppCols />
	<ChapNextBtn link={'./key-areas.html'} text="Lĩnh vực trọng yếu"/>
</Layout>