	<GenJour />
	<Image src={stripeWide} alt="" class='decor'/>
	<GenRes />
	<Image src={stripeWide} alt="" class='decor'/>
	<GenAward />
	<ChapNextBtn link={'./approach.html'} text="Phương pháp tiếp cận"/>
