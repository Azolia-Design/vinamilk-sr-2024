---
import { Image } from "astro:assets";
import chap9HeroImg from '../../assets/chap9HeroImg.png';
import chap9HeroContent from '../../assets/chap9HeroContentEng.svg?raw';
import chap9HeroContentMB from '../../assets/chap9HeroImgEngMB.png';
---
<section class="chap9-hero">
    <div class="container">
        <div class="ex-wrap">
            <div class="ex-img" data-aos="fade-up">
                <Image src={chap9HeroImg} alt="" />
            </div>
            <div class="ex-content" data-aos="fade-up" data-aos-delay="100">
                <Fragment set:html={chap9HeroContent}/>
            </div>
        </div>
        <div class="ex-wrap ex-mb">
            <div class="ex-img" data-aos="fade-up">
                <Image src={chap9HeroContentMB} alt="" />
            </div>
        </div>
    </div>
</section>
<style lang="scss">
    .chap9-hero {
        padding-top: 7.2rem;
    }
</style>