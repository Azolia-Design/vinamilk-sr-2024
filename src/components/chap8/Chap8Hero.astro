---
import { Image } from "astro:assets";
import chap8HeroImg from '../../assets/chap8HeroImg.png';
import chap8HeroContent from '../../assets/chap8HeroContent.svg';
---
<section class="chap8-hero">
    <div class="container">
        <div class="ex-wrap">
            <div class="ex-img" data-aos="fade-up">
                <Image src={chap8HeroImg} alt="" />
            </div>
            <div class="ex-content" data-aos="fade-up" data-aos-delay="200">
                <Image src={chap8HeroContent} alt="" />
            </div>
        </div>
    </div>
</section>
<style lang="scss">
    .chap8-hero {
        padding-top: 7.2rem;
    }
</style>