---
import { Image } from "astro:assets";
import genAwardImg from '../../assets/genAwardImg.png';
import genAwardContent from '../../assets/genAwardContent.svg?raw';
---
<section class="gen-award">
    <div class="container">
        <div class="ex-wrap">
            <div class="ex-img" data-aos="fade-up">
                <Image src={genAwardImg} alt="" />
            </div>
            <div class="ex-content" data-aos="fade-up">
                <Fragment set:html={genAwardContent} />
            </div>
        </div>
    </div>
    
</section>
<style lang="scss">
    .gen-award {
        background-color: var(--cl-bg);
    }
</style>