---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { Image } from 'astro:assets';
import logoImg from '../../assets/logo-img.png';

const {content, lang} = Astro.props;
---
<footer class="footer">
    <div class="container grid">
        
    </div>
    <div class="footer-copy">
        <div class="container">
            <div class="txt txt-14 txt-white footer-copy-txt">
                {content.copy.text}
            </div>
        </div>
    </div>
</footer>
<style lang="scss">
    .footer {
        box-shadow: 0 -.4rem 1rem 0 rgba(0,0,0,.1);
        &-top-wrap {
            padding-block: 8.8rem;
            row-gap: 3rem;
            @media screen and (max-width: 767px) {
                padding-block: 5.4rem 3.2rem;
                row-gap: 2rem;
            }
        }
        &-logo {
            grid-column: 1/3;
            grid-row: 1/3;
            align-self: start;
            justify-self: start;
            width: 100%;
            margin-top: .6rem;
            @media screen and (max-width: 767px) {
                grid-column: 1/-1;
                grid-row: span 1;
                margin-top: 0;
                margin-bottom: 2rem;
                width: 23.7rem;
            }
            &-link {
                
            }
        }
        &-grp {
            @media screen and (max-width: 767px) {
                grid-column: 1/-1 !important;
                grid-row: span 1 !important;
            }
            &-inner-link-txt {
                @media screen and (max-width: 767px) {
                    font-size: 1.4rem;
                }
            }
            &-label {
                margin-bottom: .5rem;
            }
            &-inner {
                display: flex;
                flex-direction: column;
                align-items: start;
                row-gap: 0;
            }
            &-tel {
                grid-column: 5/8;
                grid-row: 1/2;
            }
            &-head {
                grid-column: 8/13;
                grid-row: 1/2;
            }
            &-fax {
                grid-column: 5/8;
                grid-row: 2/3;
                @media screen and (max-width: 767px) {
                    grid-row: 3/4 !important;
                }
            }
            &-site {
                grid-column: 8/13;
                grid-row: 2/3;
            }
        }
        &-copy {
            background-color: var(--cl-blue);
            padding-block: 1.4rem;
            &-txt {
                text-align: center;
                margin-inline: auto;
                @media screen and (max-width: 767px) {
                    font-size: 1rem;
                }
            }
        }
    }
</style>