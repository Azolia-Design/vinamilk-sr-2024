---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { Image } from 'astro:assets';
import stripe from '../../assets/stripe.svg';
import dl_google from '../../assets/Google play.svg';
import dl_apple from '../../assets/App Store.svg';
import ic_fb from '../../assets/fb.svg';
import ic_ins from '../../assets/ins.svg';
import ic_in from '../../assets/in.svg';
import ic_youtube from '../../assets/youtube.svg';
import ic_tiktok from '../../assets/tiktok.svg';
import BCT from '../../assets/BCT.png';

const {content, lang} = Astro.props;
---
{Astro.props.hide_stripe != true ? <Image src={stripe} alt="" /> : <div class="line"></div>}
<footer class="footer">
    <div class="container top">
        <div class="grp grp-main">
            <a href="#" class="btn ft-main-btn">
                <span class="txt txt-16 txt-med">Tải xuống bản PDF</span>
            </a>
            <div class="btn-dl-wrap">
                <a href="#" class="btn-dl">
                    <Image src={dl_google} alt='' />
                </a>
                <a href="#" class="btn-dl">
                    <Image src={dl_apple} alt='' />
                </a>
            </div>
            <div class="socials-wrap">
                <a href="#" class="ic ic-32 social-item">
                    <Image src={ic_fb} alt='' />
                </a>
                <a href="#" class="ic ic-32 social-item">
                    <Image src={ic_ins} alt='' />
                </a>
                <a href="#" class="ic ic-32 social-item">
                    <Image src={ic_in} alt='' />
                </a>
                <a href="#" class="ic ic-32 social-item">
                    <Image src={ic_youtube} alt='' />
                </a>
                <a href="#" class="ic ic-32 social-item">
                    <Image src={ic_tiktok} alt='' />
                </a>
            </div>
        </div>
        <div class="grp-row">
            <div class="grp grp-sub">
                <a href="#" class="txt txt-16 txt-med label">
                    <span>Tuyển dụng</span>
                </a>
                <a href="#" class="txt txt-16 txt-med label">
                    <span>Phát triển Bền vững</span>
                </a>
                <a href="#" class="txt txt-16 txt-med label">
                    <span>Cải tiến & Đổi mới</span>
                </a>
                <a href="#" class="txt txt-16 txt-med label">
                    <span>Hệ thống Cửa hàng</span>
                </a>
                <a href="#" class="txt txt-16 txt-med label">
                    <span>Thông tin Dinh dưỡng</span>
                </a>
            </div>
            <div class="grp grp-sub">
                <div class="txt txt-16 txt-med label">
                    <span>Câu chuyện Vinamilk</span>
                </div>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Về công ty</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Lịch sử phát triển</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Đơn vị thành viên</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Thành tích nổi bật</span>
                </a>
            </div>
            <div class="grp grp-sub">
                <div class="txt txt-16 txt-med label">
                    <span>Thông tin Cổ đông</span>
                </div>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Đại hội đồng cổ đông</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Báo cáo thường niên</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Thông báo cổ đông</span>
                </a>
            </div>
            <div class="grp grp-sub">
                <div class="txt txt-16 txt-med label">
                    <span>Liên hệ</span>
                </div>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Truyền thông</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Thông cáo báo chí</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Tin tức sự kiện</span>
                </a>
                <a href="#" class="txt txt-16 txt-med txt-inter link">
                    <span>Thư viện</span>
                </a>
            </div>
        </div>
    </div>
    <div class="footer-copy">
        <div class="container bot">
            <div class="line"></div>
            <div class="grp-copy-left">
                <div class="grp-copy-top">
                    <div class="txt txt-14 txt-inter">Bản quyền thuộc về Vinamilk © 2023.</div>
                    <a href="#" class="txt txt-12 txt-inter link">
                        Điều khoản sử dụng
                    </a>
                    <div class="line-ver"></div>
                    <a href="#" class="txt txt-12 txt-inter link">
                        Chính sách bảo mật
                    </a>
                </div>
                <div class="grp-copy-bot">
                    <div class="txt txt-14 txt-inter">
                        Số giấy chứng nhận đăng ký doanh nghiệp: 0300588569. Ngày cấp: 20/11/2003. Nơi cấp: Sở Kế hoạch và Đầu tư thành phố Hồ Chí Minh
                    </div>
                </div>
            </div>
            <div class="grp-copy-right">
                <Image src={BCT} alt='' />
            </div>
        </div>
    </div>
</footer>
<style lang="scss">
    .footer {
        background-color: var(--cl-blue);
        .container {
            padding-inline: 4rem;
            display: flex;
            justify-content: space-between;
            &.top {
                padding-block: 8.5rem 5.6rem;
            }
        }
        .grp {
            display: flex;
            flex-direction: column;
            align-items: start;
            justify-content: center;
            row-gap: 2rem;
            &-main {
                width: 26.6rem;
                .ft-main-btn {
                    padding-block: 1.6rem;
                    padding-inline: 6.9rem;
                    .span {
                        line-height: 2.4rem;
                    }
                }
                .btn-dl-wrap {
                    display: flex;
                    column-gap: .8rem;
                }
                .socials-wrap {
                    display: flex;
                    column-gap: 1.2rem;
                }
            }
            &-row {
                height: 100%;
                display: flex;
                justify-content: end;
                color: var(--cl-bg);
                column-gap: 2.4rem;
            }
            &-sub {
                width: 21.9rem;
                display: flex;
                flex-direction: column;
                justify-content: start;
                align-items: start;
                row-gap: 0;
                .label, .link {
                    line-height: 2rem;
                }
                .label:not(:last-child) {
                    margin-bottom: 1.8rem;
                }
                .link:not(:last-child) {
                    margin-bottom: 1.2rem;
                }
            }
        }
        &-copy {
            color: var(--cl-bg);
            .container.bot {
                padding-block: 2rem 4rem;
                position: relative;
                align-items: center;
                .line {
                    position: absolute;
                    top: 0;
                    left: 4rem;
                    right: 4rem;
                    background-color: var(--cl-bg);
                    width: auto;
                }
            }
            .grp-copy-top {
                display: flex;
                align-items: center;
                column-gap: .4rem;
                .line-ver {
                    background-color: var(--cl-bg);
                    width: 1px;
                    height: 1.6rem;
                    margin-inline: .2rem;
                }
                .link {
                    text-decoration: underline;
                }
            }
            .grp-copy-right {
                width: 15rem;
            }
        }
    }
</style>