<style lang="scss">
    .footer {
        background-color: var(--cl-blue);
        contain: paint;
        .container {
            padding-inline: 4rem;
            display: flex;
            justify-content: space-between;
            @media screen and (max-width: 767px) {
                padding-inline: 1.6rem;
                flex-direction: column;
            }
            &.top {
                padding-block: 8.5rem 5.6rem;
                @media screen and (max-width: 767px) {
                    padding-block: 5.1rem 4.8rem;
                }
            }
        }
        .grp {
            display: flex;
            flex-direction: column;
            align-items: start;
            justify-content: center;
            row-gap: 2rem;
            &-main {
                width: 26.6rem;
                @media screen and (max-width: 767px) {
                    width: 100%;
                    align-items: center;
                    margin-bottom: 6rem;
                }
                .ft-main-btn {
                    padding-block: 1.6rem;
                    padding-inline: 6.9rem;
                    position: relative;
                    &::after {
                        content: '';
                        position: absolute;
                        top: 0;
                        left: 0;
                        right: 0;
                        bottom: 0;
                        border: 1px solid var(--cl-bg);
                        border-radius: 0.5rem;
                        z-index: 2;
                        opacity: 0;
                        transition: all 400ms ease;
                        pointer-events: none;
                    }
                    &:hover::after {
                        opacity: 1;
                    }
                    @media screen and (max-width: 767px) {
                        padding-inline: 6.2rem;
                    }
                    .span {
                        line-height: 2.4rem;
                    }
                }
                .btn-dl-wrap {
                    display: flex;
                    column-gap: .8rem;
                    @media screen and (max-width: 767px) {
                        .btn-dl {
                            width: 12.2rem;
                        }
                    }
                }
                .socials-wrap {
                    display: flex;
                    column-gap: 1.2rem;
                    @media screen and (max-width: 767px) {
                        column-gap: 2.3rem;
                    }
                }
            }
            &-row {
                height: 100%;
                display: flex;
                justify-content: end;
                color: var(--cl-bg);
                column-gap: 2.4rem;
                @media screen and (max-width: 767px) {
                    flex-direction: column;
                    row-gap: 2.8rem;
                }
            }
            &-sub {
                width: 21.9rem;
                display: flex;
                flex-direction: column;
                justify-content: start;
                align-items: start;
                row-gap: 0;
                .label, .link {
                    line-height: 2rem;
                }
                .link {
                    @media screen and (max-width: 767px) {
                        font-size: 1.4rem;
                    }
                }
                .label:not(:last-child) {
                    margin-bottom: 1.8rem;
                }
                .link:not(:last-child) {
                    margin-bottom: 1.2rem;
                }
            }
        }
        &-copy {
            color: var(--cl-bg);
            .container.bot {
                padding-block: 2rem 4rem;
                position: relative;
                align-items: center;
                @media screen and (max-width: 767px) {
                    padding-block: 2.4rem 3.2rem;
                    align-items: start;
                    row-gap: 2rem;
                }
                .line {
                    position: absolute;
                    top: 0;
                    left: 4rem;
                    right: 4rem;
                    background-color: var(--cl-bg);
                    width: auto;
                    @media screen and (max-width: 767px) {
                        display: none;
                    }
                }
            }
            .grp-copy-top {
                display: flex;
                align-items: center;
                column-gap: .4rem;
                @media screen and (max-width: 767px) {
                    display: grid;
                    row-gap: .4rem;
                    grid-template-columns: auto calc(1px + .4rem) 1fr;
                    .label {
                        grid-column: 1/4;

                    }
                }
                .line-ver {
                    background-color: var(--cl-bg);
                    width: 1px;
                    height: 1.6rem;
                    margin-inline: .2rem;
                    @media screen and (max-width: 767px) {

                    }
                }
                .link {
                    text-decoration: underline;
                }
            }
            .grp-copy-left {
                @media screen and (max-width: 767px) {
                    display: flex;
                    flex-direction: column;
                    align-items: start;
                    row-gap: .8rem;
                }
            }
            .grp-copy-right {
                width: 15rem;
            }
        }
    }
</style>