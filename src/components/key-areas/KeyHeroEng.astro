---
import { Image } from "astro:assets";
import keyHeroImg from '../../assets/keyHeroImg.png';
---
<section class="key-hero">
    <div class="container grid">
        <div class="key-hero-content">
            <div class="heading txt-80 txt-bold txt-up key-hero-title" data-aos="fade-up">
                Materialty areas
            </div>
            <div class="list">
                <div class="col" data-aos="fade-up" data-aos-delay="200">
                    <a href="./key-areas/chap1.html" class="txt txt-16 txt-link">
                        <span>Greenhouse Gas Emissions</span>
                    </a>
                    <a href="./key-areas/chap2.html" class="txt txt-16 txt-link">
                        <span>Product Safety And Quality</span>
                    </a>
                    <a href="./key-areas/chap3.html" class="txt txt-16 txt-link">
                        <span>Working Conditions And Human Resource Development</span>
                    </a>
                    <a href="./key-areas/chap4.html" class="txt txt-16 txt-link">
                        <span>Local Economy</span>
                    </a>
                    <a href="./key-areas/chap5.html" class="txt txt-16 txt-link">
                        <span>Animal Welfare</span>
                    </a>
                    <a href="./key-areas/chap6.html" class="txt txt-16 txt-link">
                        <span>Soil Nutrients, Soil Quality And Retention</span>
                    </a>
                </div>
                <div class="col" data-aos="fade-up" data-aos-delay="300">
                    <a href="./key-areas/chap7.html" class="txt txt-16 txt-link">
                        <span>Biodiversity Conservation - Foundation For Sustainable Agriculture</span>
                    </a>
                    <a href="./key-areas/chap8.html" class="txt txt-16 txt-link">
                        <span>Waste Management</span>
                    </a>
                    <a href="./key-areas/chap9.html" class="txt txt-16 txt-link">
                        <span>Water Availability And Quality</span>
                    </a>
                    <a href="./key-areas/chap10.html" class="txt txt-16 txt-link">
                        <span>Market Development</span>
                    </a>
                    <a href="./key-areas/chap11.html" class="txt txt-16 txt-link">
                        <span>Spreading Love For A Happy Community</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="img-wrap" data-aos="fade-up">
            <Image src={keyHeroImg} alt="" class="img-fill"/>
        </div>
    </div>
    
</section>
<style lang="scss">
    .key-hero {
        padding-top: 7.2rem;
        position: relative;
        .container {
            height: 100%;
            position: relative;
            z-index: 2;
        }
        &-content {
            grid-column: 1/15;
            padding-block: 5rem;   
            color: var(--cl-blue);
            position: relative;
            z-index: 2;
            margin-bottom: 40.2rem;
            @media screen and (max-width: 767px) {
                grid-column: 1/-1;
                padding-block: 4.5rem 17rem;
                margin-bottom: 0;
            }
        }
        &-title {
            line-height: 1.05em;
            margin-bottom: 3.5rem;
            @media screen and (max-width: 767px) {
                font-size: 6.4rem;
                text-align: center;
                margin-bottom: 3.2rem;
                text-transform: none;
                max-width: 26rem;
                margin-inline: auto;
            }
        }
        .list {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            column-gap: 5rem;
            @media screen and (max-width: 767px) {
                display: flex;
                flex-direction: column;
                align-items: start;
                row-gap: 2.2rem;
            }
            .col {
                display: flex;
                flex-direction: column;
                align-items: start;
                gap: 2.2rem;
            }
        }
        .img-wrap {
            position: absolute;
            inset: 0;
            z-index: 1;
            @media screen and (max-width: 767px) {
                top: auto;
                right: 0;

            }
        }
    }
</style>